{{define "main"}}

{{ if .isAdmin }}
    {{ template "adminlinks" . }}
{{ end }}

{{ with .users }}
<table class="table">
    <thead><tr>
        <th></th>
        <th>Email</th>
        <th>Name</th>
        <th>Jobs</th>
        <th>Pages</th>
        <th>Last Job <span class="is-size-7">(UTC)</span></th>
        <th>Verified</th>
        <th>Enabled</th>
        <th>Admin</th>
    </tr></thead>
    <tbody>
    {{range .}}
        <tr>
            <td><a href="edituser?email={{.Email}}">Edit</a></td>
            <td>{{.Email}}</td>
            <td>{{.FullName}}</td>
            <td>{{.JobCount}}</td>
            <td>{{.PageCount}}</td>
            <td>{{.LastJob.Format "2006-01-02 15:04:05"}}</td>
            <td><input type="checkbox" disabled {{ if .Verified }}checked{{ end }}></td>
            <td><input type="checkbox" disabled {{ if .Enabled }}checked{{ end }}></td>
            <td><input type="checkbox" disabled {{ if .Admin }}checked{{ end }}></td>
        </tr>
    {{end}}
    </tbody>
</table>
{{ end }}

{{end}}
